<MainScreen>
    MainScreenTabbedPanel:
        do_default_tab: False
        tab_width: root.width / 3
        tab_height: root.height / 4
        background_color: (0,1,0,1)
        FloatLayout:
            FilesContent:
                id: filescontent
                text: "Files list!"
            PrinterStatusContent:
                id: printerstatuscontent
                text: "Printer status!"
            SettingsContent:
                id: settingscontent
                text: "Settings list!"
        FilesTab:
            text: "\n\n\n\nFiles"
            content: filescontent.__self__
            Image:
                source: "icons/files.png"
                pos: (self.parent.width/2) - 50, (self.parent.height/2.5)
                allow_stretch: True
        PrinterStatusTab:
            text: "\n\n\n\nPrinter"
            content: printerstatuscontent.__self__
            Image:
                source: "icons/printer.png"
                pos: self.parent.width+215, (self.parent.height/2.5)
                allow_stretch: True
        SettingsTab:
            text: "\n\n\n\nSettings"
            content: settingscontent.__self__
            Image:
                source: "icons/settings.png"
                pos: self.parent.width * 2 + 215, (self.parent.height/2.5)
                allow_stretch: True
